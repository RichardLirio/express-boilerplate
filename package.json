{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "Express + TypeScript boilerplate",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only --watch src src/server.ts",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "check": "eslint . --ext .ts",
    "check:fix": "eslint . --ext .ts  --fix"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.35.1"
  }
}
