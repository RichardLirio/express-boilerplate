{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "Express + TypeScript boilerplate",
  "main": "dist/server.js",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only --watch src src/server.ts",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "check": "eslint . --ext .ts",
    "check:fix": "eslint . --ext .ts  --fix",
    "test:unit": "vitest run --config vitest.config.mts",
    "test:e2e": "vitest run --config vitest.config.e2e.mts",
    "test:unit:watch": "vitest watch --config vitest.config.mts",
    "test:e2e:watch": "vitest watch --config vitest.config.e2e.mts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.4.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prisma": "^6.11.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.35.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
